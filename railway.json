{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicyType": "ALWAYS",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "healthcheckInterval": 10,
    "numReplicas": 1,
    "env": {
      "PORT": "3000",
      "NODE_ENV": "production"
    }
  }
}